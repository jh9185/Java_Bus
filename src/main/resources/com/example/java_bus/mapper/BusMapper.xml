<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.java_bus.mapper.BusMapper">

    <select id="getList" resultType="com.example.java_bus.domain.BusStation">
        SELECT
        *
        FROM tbl_bus;
    </select>

    <select id="getNumberList" resultType="com.example.java_bus.domain.BusNumber">
        SELECT
            *
        FROM tbl_busnumber;
    </select>

    <insert id="insertBusNumberList" parameterType="com.example.java_bus.domain.BusNumber">
        INSERT INTO tbl_busnumber (busRouteId, busRouteNm)
        VALUES
            (#{busRouteId}, #{busRouteNm});
    </insert>

    <select id="getBusRouteId" parameterType="String" resultType="com.example.java_bus.domain.BusNumber">
        SELECT
            *
        FROM tbl_busnumber where busRouteNm=#{busRouteNm};
    </select>

</mapper>